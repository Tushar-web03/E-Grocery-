<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Shipment Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var shipment in Model)
        {
            foreach (var item in shipment.Order.OrderItems)
            {
                <tr>
                    <td>@item.Product.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@shipment.ShipmentDate.ToShortDateString()</td>
                    <td><span class="label label-info">@shipment.DeliveryStatus</span></td>
                </tr>
            }
        }
    </tbody>
</table>
